    </article>
    <article>
      <header>Anzahl Bewertungen</header>
      <h3>{{ stats.reviewCount }}</h3>
    </article>    
    <article>
      <header>Anzahl Benutzer</header>
      <h3>{{ stats.userCount }}</h3>
    </article>
    <article>
      <header>Admin-Konten</header>
      <h3>{{ stats.adminCount }}</h3>
    </article>    
    <article>
      <header>Anzahl Authoren</header>
      <h3>{{ stats.authorCount }}</h3>
    </article>
  </div>
</section>
{% endblock %}