{% extends "layouts:default.njk" %}
{% from "error:form.njk" import formErrors %}

{% block content %}
{{ formErrors(errors) }}

<form method="POST" action="/users/register">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="{{ fields.name }}" required>

  <label for="email">E-Mail</label>
  <input type="email" id="email" name="email" value="{{ fields.email }}" required>

  <label for="password">Passwort</label>
  <input type="password" id="password" name="password" value="{{ fields.password }}" required>

  <button type="submit">Registrieren</button>
</form>
{% endblock %}